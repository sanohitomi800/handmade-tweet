<div class="containts row">
  <div class="container">
    <h3>編集する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "ニックネーム"%>
      <%= form.text_field :image, placeholder: "画像"%>
      <%= form.text_area :text, placeholder: "説明文", rows: "10" %>
      <%= form.submit "送信"%>
    <% end %>
  </div>
</div>